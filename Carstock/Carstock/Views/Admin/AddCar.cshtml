@model Car
@{
	ViewData["Title"] = "New car";
    var carmodels = ViewData["Carmodel"] as List<Carmodel>;
}

<h2>Add car</h2>
<p>
	If the model doesn't appear, you can create model <a asp-controller="Admin" asp-action="AddModel">here</a>
</p>

<form method="POST">
	    <div class="mb-3">
        <select class="form-select" asp-for="@Model.IdModel">
            <option selected>Select the model :</option>
            @foreach(var carmodel in carmodels)
            {
                <option value="@carmodel.IdModel">@carmodel.Brand  @carmodel.Model</option>
            }
        </select>
    </div>
    <input class="btn btn-primary"  type="submit" value="Create"/>
</form>
